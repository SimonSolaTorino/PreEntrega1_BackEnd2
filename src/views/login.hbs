<div class="container-login">
    <h1>Iniciar sesión</h1>
    <form class="form-login">
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" type="email" name="email" class="input-field" placeholder="Tu email" required>
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input id="password" type="password" name="password" class="input-field" placeholder="Tu contraseña" required>
        </div>
        <button type="submit" class="boton-login">Iniciar sesión</button>
        <p class="register-link">¿No tienes cuenta? <a href="/register">¡Regístrate!</a></p>
    </form>
</div>
<script src="/login.logic.js"></script>