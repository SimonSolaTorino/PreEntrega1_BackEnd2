<div class="container-register">
    <h1>Regístrate</h1>
    <form id="registerForm" class="form-register">
        <div class="form-group">
            <label for="first_name">Nombre</label>
            <input id="first_name" type="text" name="first_name" class="input-field" placeholder="Tu nombre" required>
        </div>
        <div class="form-group">
            <label for="last_name">Apellido</label>
            <input id="last_name" type="text" name="last_name" class="input-field" placeholder="Tu apellido" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" type="email" name="email" class="input-field" placeholder="Tu email" required>
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input id="password" type="password" name="password" class="input-field" placeholder="Tu contraseña" required>
        </div>
        <div class="form-group">
            <label for="age">Edad</label>
            <input id="age" type="number" name="age" class="input-field" placeholder="Tu edad" required>
        </div>
        <button type="submit" class="boton-register">Registrarse</button>
        <p class="login-link">¿Ya tienes cuenta? <a href="/login">¡Inicia sesión!</a></p>
    </form>
</div>
<script src="/register.logic.js"></script>
